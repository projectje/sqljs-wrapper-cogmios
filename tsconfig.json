{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "test",
        "sourceMap": true,
        "target": "es2020",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": ["ES2015", "ES2016", "ES2018", "ES2019", "ES2020", "ESNext"],
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "exclude": ["node_modules","dist","build"],
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./typings/index.d.ts",
        "./custom_typings/**/*.d.ts",
        "./node_modules/@types/**/*.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}